                        <Image url="@../../../../../../Imagini/user.png" />
                    </image>
                </ImageView>
                <Label layoutX="189.0" layoutY="30.0" prefHeight="18.0" prefWidth="246.0" text="User Registration">
                    <font>
                        <Font name="System Italic" size="28.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <Label layoutX="54.0" layoutY="122.0" text="Firstname">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label layoutX="54.0" layoutY="181.0" text="Lastname">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label layoutX="52.0" layoutY="237.0" text="Username">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label layoutX="54.0" layoutY="298.0" text="Password">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label layoutX="52.0" layoutY="356.0" text="Confirm Password">
