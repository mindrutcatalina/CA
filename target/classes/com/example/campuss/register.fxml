    <children>
        <AnchorPane fx:id="firstname" layoutY="2.0" prefHeight="102.0" prefWidth="690.0" style="-fx-background-color: #d3b3bf;">
            <children>
                <ImageView fx:id="shieldImageView" fitHeight="102.0" fitWidth="111.0" layoutY="-2.0" pickOnBounds="true" preserveRatio="true">
