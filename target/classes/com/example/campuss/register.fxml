            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label fx:id="confirmPasswordLabel" layoutX="183.0" layoutY="358.0" prefHeight="20.0" prefWidth="226.0" text="Password does not match." textFill="#ea0f0f">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
      <PasswordField fx:id="confirmPasswordField" layoutX="44.0" layoutY="385.0" prefHeight="25.0" prefWidth="506.0" promptText="Confirm Password" />
      <PasswordField fx:id="setPasswordField" layoutX="46.0" layoutY="331.0" prefHeight="25.0" prefWidth="506.0" promptText="Password" />
