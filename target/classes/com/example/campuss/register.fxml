        <TextField fx:id="usernameTextField" layoutX="44.0" layoutY="257.0" prefHeight="30.0" prefWidth="506.0" promptText="Username" />
        <Button fx:id="registerButton" layoutX="147.0" layoutY="432.0" mnemonicParsing="false" onAction="#registerButtonOnAction" prefHeight="26.0" prefWidth="355.0" style="-fx-background-color: #d3b3bf;" text="Register" />
